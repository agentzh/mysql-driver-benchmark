#!/bin/bash

uri=http://web:8080/t
curl -s -i $uri

if [ ! -d logs/ ]; then
    mkdir -p logs || exit 1
fi

pids=

function cleanup {
    if [ -n "$pids" ]; then
        kill $pids
        sleep 0.3
        kill -9 $pids
    fi
    exit
}

trap cleanup SIGHUP SIGINT SIGTERM

#./watch-mysql &
#pids="$pids $!"

#./watch-nginx &
#pids="$pids $!"

#./watch-weighttp &
#pids="$pids $!"

c=20
total=0
while [ $c -le 1000 ]; do
    n=$((c * 3))
    total=$((total + n))

    if [ $total -ge 20000 ]; then
        echo "INFO: sleeping 15 sec..."
        sleep 15
        total=0
    else
        sleep 1;
    fi

    echo ===
    echo BEGIN `date +"%Y-%m-%d %H:%M:%S"`
    weighttp -k -c$c -n$n $uri
    echo END `date +"%Y-%m-%d %H:%M:%S"`
    c=$((c + 20))
done

if [ -n "$pids" ]; then

    echo killing $pids
    kill $pids

    sleep 0.3

    echo killing $pids with force
    kill -9 $pids > /dev/null 2>&1

    ps aux|grep watch|grep -v grep
fi

