#!/bin/bash

nginx_bin=/opt/openresty-lua/nginx/sbin/nginx

if [ -f logs/nginx.pid ]; then
    pid=`cat logs/nginx.pid`
    if [ -n "$pid" ]; then
        kill -QUIT $pid
        if [ $? -ne 0 ]; then
            kill -9 $pid
        fi
        sleep 0.3
    fi
fi

$nginx_bin -p `pwd`/ -c conf/nginx.conf

